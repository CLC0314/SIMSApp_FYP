<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ShoppingListActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarShopping"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        app:title="Shopping List"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etQuickAddName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="What do you need to buy?"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:inputType="textCapWords" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#DDDDDD"
                android:layout_marginHorizontal="8dp"/>

            <ImageButton
                android:id="@+id/btnAddShoppingItem"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_add"
                app:tint="@color/purple_500" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShoppingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        tools:listitem="@android:layout/simple_list_item_multiple_choice" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCompleteAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="0dp">

        <Button
            android:id="@+id/btnCompletePurchase"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:text="Complete &amp; Add to Inventory"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_700"
            app:icon="@android:drawable/ic_input_add"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>